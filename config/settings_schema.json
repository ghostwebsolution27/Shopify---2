      {
        "type": "checkbox",
        "id": "multiple_image_product_enable",
        "label": "Enable Multiple Image?"
      },
      {
        "type": "header",
        "content": "Product Reviews"
      },
      {
        "type": "checkbox",
        "id": "product_reviews_enable",
        "label": "Enable Product Reviews?",
        "info": "[View Product Review settings](\/admin\/apps\/product-reviews\/settings)"
