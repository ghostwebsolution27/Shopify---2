  {
    "name": "Vela Features",
    "settings": [
      {
        "type": "header",
        "content": "Theme Settings"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
