      {
        "type": "header",
        "content": "Product Quickview",
        "info": "Quickview will disable on Mobile, Tablet"
      },
      {
        "type": "checkbox",
        "id": "quickview_enable",
        "label": "Enable Quickview?"
      },
      {
        "type": "checkbox",
