<section id="pageContent" class="section-textblock">
     <div class="col-md-12 col-xs-12">
        {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
                <div class="content-wrapper">
                    {% if block.settings.title %}
                        <h2 class="page-title">{{ block.settings.title }}</h2>
                    {% endif %}
                    <div class="page-content">
                        {{ block.settings.content }}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

</section>

<style>
    section.section-textblock{
        padding-top: 0px !important;
        position: relative;
        margin-bottom: 30px;
    }

    section.section-textblock .content-wrapper{
        padding-top: 20px !important;
        max-width: 800px;
        text-align: center;
        margin: 0px auto;
    }

    section.section-textblock .content-wrapper .page-title{
        font-size: 28px;
        margin-bottom: 30px;
        font-family: "Gotham-Medium";
        font-weight: 500;
    }

    section.section-textblock .content-wrapper .page-content{
        font-size: 14px;
        font-style: normal;
        font-family: "Gotham-Thin";
        font-weight: bold;
        line-height: 2.5;
    }

    section.section-textblock .content-wrapper{
        padding-top: 0px;
    }
</style>

{% schema %}
{
    "name": "Section textblock",
    "class": "section-textblock",
    "settings": [
    ],
    "blocks": [
        {
            "name": "text block",
            "type": "text-block",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ]
}
{% endschema %}