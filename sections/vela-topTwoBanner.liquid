            },
			{
                "type": "text",
                "id": "title1",
                "label": "1st Title"
            },
            {
                "type": "text",
                "id": "image_link1",
                "label": "1st Image Link"
            },
			{
                "type": "image_picker",
                "id": "image2",
                "label": "2st Banner Image"
            },
			{
                "type": "text",
