
<form class="formSearch" action="/search" method="get">
	<div class="input-group">
		<input type="hidden" name="type" value="product" />
		<input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" class="velaSearch form-control" />
		<span class="input-group-btn">
			<button type="submit" class=" btn btnVelaSearch btnVelaOne">
			  	<span class="fa fa-search"></span>
			  	<span class="btnSearchText">{{ 'general.search.submit' | t }}</span>
			</button>
		</span>
	</div>
</form>