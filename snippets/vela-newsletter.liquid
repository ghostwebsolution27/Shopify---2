<div id="vela-newsletter" class="clearfix wow fadeIn">
      <div class="velaBlock">
          {% if newsletterTitle != blank %}
            <h3 class="velaFooterTitle">{{ newsletterTitle }}</h3>
          {% endif %}
          <div class="velaContent">
              {% if newsletterDesc != blank %}
                  <div class="newsletterDescription">{{ newsletterDesc }}</div>
              {% endif %}
              {% if newsletterMailchimp %}
                  <form action="{%if form_action != blank %}{{ form_action }}{% else %}#{% endif %}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" class="formNewsletter clearfix">
                      <div class="form-group">
                          <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" id="mail" class="form-control" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}">
                          <button id="subscribe" class="btn btnNewsletter" type="submit">
                              <span>{{ 'general.newsletter_form.submit' | t }}</span>
                          </button>
                      </div>
                  </form>
              {% else %}
                  {% form 'customer' %}
                      {% if form.posted_successfully? %}
                      <script type="text/javascript">
                          $(document).ready(function() {
                              $('#newsletterAlert').modal();
                          });
                      </script>
                      {% endif %}
                      <div class="form-group">
                          <input class="form-control" id="newsletter-input" type="email" name="contact[email]" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}">
                          <button class="btn btnNewsletter" type="submit">
                              <span>{{ 'general.newsletter_form.submit' | t }}</span>
                          </button>
                          <input type="hidden" name="action" value="0">
                      </div>
                  {% endform %}
              {% endif %}
          </div>
      </div>
</div>